<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="davidepatrizi.com.scadenzarioauto" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MezzoActivity"
            android:label="@string/title_activity_mezzo" >
        </activity>

        <receiver android:name=".utility.AlarmReceiver" />

        <activity
            android:name=".ItemTagliandoActivity"
            android:label="@string/title_activity_item_tagliando" >
        </activity>
    </application>

</manifest>
