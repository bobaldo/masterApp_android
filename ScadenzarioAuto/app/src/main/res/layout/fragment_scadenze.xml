<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="@dimen/left_padding_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ita_scadenza_assicurazione" />

    <LinearLayout
        android:layout_marginLeft="@dimen/left_padding_30"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtScadenzaAssicurazione"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="imposta Data"
            android:id="@+id/btnScadenzaAssicurazione" />

    </LinearLayout>

    <CheckBox
        android:layout_marginLeft="@dimen/left_padding_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ita_avviso_assicurazione"
        android:id="@+id/txtAllarmaScadenzaAssicurazione" />

    <TextView
        android:layout_marginLeft="@dimen/left_padding_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ita_scadenza_bollo" />

    <LinearLayout
        android:layout_marginLeft="@dimen/left_padding_30"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtScadenzaBollo" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="imposta Data"
            android:id="@+id/btnScadenzaBollo" />
    </LinearLayout>

    <CheckBox
        android:layout_marginLeft="@dimen/left_padding_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ita_avviso_bollo"
        android:id="@+id/txtAllarmaScadenzaBollo" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ita_salva"
        android:id="@+id/btnSalva" />

</LinearLayout>