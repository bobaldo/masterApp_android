<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="@dimen/left_padding_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ita_scadenza_assicurazione" />

    <EditText
        android:layout_marginLeft="@dimen/left_padding_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtScadenzaAssicurazione" />

    <CheckBox
        android:layout_marginLeft="@dimen/left_padding_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ita_avviso_assicurazione"
        android:id="@+id/txtAllarmaScadenzaAssicurazione" />

    <TextView
        android:layout_marginLeft="@dimen/left_padding_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/ita_scadenza_bollo" />

    <EditText
        android:layout_marginLeft="@dimen/left_padding_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtScadenzaBollo" />

    <CheckBox
        android:layout_marginLeft="@dimen/left_padding_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ita_avviso_bollo"
        android:id="@+id/txtAllarmaScadenzaBollo" />

</LinearLayout>